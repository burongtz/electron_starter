{
  "name": "app-name",
  "version": "0.0.1",
  "description": "A desktop app built with Electron",
  "author": "Your Name",
  "license": "Apache-2.0",
  "private": "true",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development ts-node watch.ts",
    "dev:frontend": "vite src/frontend",
    "build": "npm run build:frontend && npm run build:preload && npm run build:backend",
    "build:frontend": "vue-tsc -p src/frontend/tsconfig.json && vite build src/frontend",
    "build:preload": "tsc -p src/preload/tsconfig.json && vite build src/preload",
    "build:backend": "tsc -p src/backend/tsconfig.json && vite build src/backend",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@types/node": "^20.7.2",
    "@vitejs/plugin-vue": "^4.3.4",
    "cross-env": "^7.0.3",
    "electron": "^26.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vue-tsc": "^1.8.15"
  },
  "dependencies": {
    "vue": "^3.3.4",
    "vue-router": "^4.2.5"
  }
}
